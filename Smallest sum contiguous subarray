
class Solution {
    static int smallestSumSubarray(int arr[], int size) {
        int sum = 0, min = Integer.MAX_VALUE;
        
        for(int i = 0; i < size; i++) {
            if(arr[i] > (sum + arr[i]))
                sum += arr[i];
            else 
                sum = arr[i];
                  
            if(sum < min) 
                min = sum;
        }
        
        return min;
    }
}
