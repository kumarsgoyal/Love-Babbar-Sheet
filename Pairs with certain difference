class Solution { 
    public static int maxSumPairWithDifferenceLessThanK(int arr[], int N, int K) {
        Arrays.sort(arr);
        int total = 0;
        
        for(int i = N - 1; i > 0; ) {
            if((arr[i] - arr[i - 1]) < K) {
                total += arr[i] + arr[i - 1];
                i -= 2;
            }
            else{
                i -= 1;
            }
        }
        
        return total;
    }
}
