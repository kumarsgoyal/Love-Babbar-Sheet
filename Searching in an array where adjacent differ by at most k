class Complete{
    
    // Function for finding maximum and value pair
    public static int search (int arr[], int n, int x, int k) {
        int index = 0;
        while(index < n) {
            if(arr[index] == x) {
                return index;
            }
            
            index = index + Math.max(1, Math.abs(arr[index] - x) / k);
        }
        
        return -1;
    }
}
