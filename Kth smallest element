class Solution{
    public static int kthSmallest(int[] arr, int l, int r, int k) { 
        PriorityQueue<Integer> que = new PriorityQueue<Integer>();
        k = arr.length - k + 1;
        
        for(int i = 0; i < arr.length; i++) {
            que.add(arr[i]);
            
            if(que.size() > k)  
                que.remove();
        }
            
        return que.peek();
    } 
}
