class Solution {
    int[] kLargest(int[] arr, int n, int k) {
        PriorityQueue<Integer> que = new PriorityQueue<> ();
        int res[] = new int[k];
        int index = k - 1;
        
        for(int i = 0; i < arr.length; i++) {
            que.add(arr[i]);
            
            if(que.size() > k) 
                que.remove();
        }
        
        while(que.size() > 0) {
            res[index--] = que.remove();
        }
            
        return res;
    }
}
